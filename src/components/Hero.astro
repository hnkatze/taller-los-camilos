<section class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16">
	<!-- Background gradient overlay -->
	<div class="absolute inset-0 bg-gradient-to-br from-charcoal via-steel to-charcoal"></div>

	<!-- Decorative welding sparks effect -->
	<div class="absolute top-1/4 right-1/4 w-64 h-64 bg-welding-orange/20 rounded-full blur-3xl"></div>
	<div class="absolute bottom-1/3 left-1/4 w-48 h-48 bg-forge-yellow/10 rounded-full blur-3xl"></div>

	<!-- Animated sparks -->
	<div class="sparks-container">
		<div class="spark spark-1"></div>
		<div class="spark spark-2"></div>
		<div class="spark spark-3"></div>
		<div class="spark spark-4"></div>
		<div class="spark spark-5"></div>
		<div class="spark spark-6"></div>
		<div class="spark spark-7"></div>
		<div class="spark spark-8"></div>
	</div>

	<div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
		<!-- Welding icon -->
		<div class="mb-6 flex justify-center">
			<div class="icon-glow">
				<svg class="w-16 h-16 md:w-20 md:h-20 text-welding-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
				</svg>
			</div>
		</div>

		<h1 class="font-heading text-4xl md:text-6xl lg:text-7xl font-bold text-smoke mb-4 tracking-tight">
			SOLDADURA <span class="text-welding-orange">PROFESIONAL</span>
		</h1>

		<p class="text-lg md:text-xl text-ash max-w-2xl mx-auto mb-8 leading-relaxed">
			Especialistas en pailas ganaderas, reparación de maquinaria agrícola,
			soldadura de arco eléctrico, techados y más.
			<span class="text-smoke font-medium">Bonito Oriental, Colón.</span>
		</p>

		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="#contacto"
				class="inline-block bg-welding-orange hover:bg-forge-yellow text-charcoal font-heading font-bold text-lg px-8 py-4 rounded-lg transition-colors"
			>
				Contáctenos
			</a>
			<a
				href="#servicios"
				class="inline-block border-2 border-smoke/30 hover:border-welding-orange text-smoke hover:text-welding-orange font-heading font-medium text-lg px-8 py-4 rounded-lg transition-colors"
			>
				Ver Servicios
			</a>
		</div>
	</div>

	<!-- Scroll indicator -->
	<div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
		<svg class="w-6 h-6 text-ash" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
		</svg>
	</div>
</section>

<style>
	.icon-glow {
		animation: icon-pulse 2s ease-in-out infinite;
	}

	@keyframes icon-pulse {
		0%, 100% {
			filter: drop-shadow(0 0 8px rgba(249, 115, 22, 0.5));
		}
		50% {
			filter: drop-shadow(0 0 20px rgba(249, 115, 22, 0.8));
		}
	}

	.sparks-container {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		pointer-events: none;
	}

	.spark {
		position: absolute;
		width: 4px;
		height: 4px;
		background: linear-gradient(to bottom, #FBBF24, #F97316);
		border-radius: 50%;
		opacity: 0;
		animation: fall linear infinite;
	}

	.spark::after {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 2px;
		height: 20px;
		background: linear-gradient(to bottom, rgba(251, 191, 36, 0.8), transparent);
	}

	.spark-1 { left: 15%; animation-duration: 3s; animation-delay: 0s; }
	.spark-2 { left: 25%; animation-duration: 2.5s; animation-delay: 0.5s; }
	.spark-3 { left: 40%; animation-duration: 3.5s; animation-delay: 1s; }
	.spark-4 { left: 55%; animation-duration: 2.8s; animation-delay: 0.3s; }
	.spark-5 { left: 70%; animation-duration: 3.2s; animation-delay: 0.8s; }
	.spark-6 { left: 85%; animation-duration: 2.6s; animation-delay: 1.2s; }
	.spark-7 { left: 35%; animation-duration: 3.8s; animation-delay: 1.5s; }
	.spark-8 { left: 65%; animation-duration: 2.9s; animation-delay: 0.7s; }

	@keyframes fall {
		0% {
			transform: translateY(-20px) rotate(0deg);
			opacity: 1;
		}
		70% {
			opacity: 0.8;
		}
		100% {
			transform: translateY(100vh) rotate(720deg);
			opacity: 0;
		}
	}
</style>
