---
const phone = "99505549";
const whatsappLink = `https://wa.me/504${phone}`;
const phoneLink = `tel:+504${phone}`;
---

<!-- Section separator -->
<div class="section-separator bg-steel">
	<svg class="w-full h-12 md:h-16" viewBox="0 0 1200 100" preserveAspectRatio="none">
		<path d="M0,0 L1200,0 L1200,40 L600,100 L0,40 Z" fill="#1C1C1C"/>
	</svg>
</div>

<section id="contacto" class="py-20 md:py-28 px-4 bg-charcoal">
	<div class="max-w-6xl mx-auto">
		<div class="text-center mb-12 animate-on-scroll">
			<h2 class="font-heading text-3xl md:text-4xl font-bold text-smoke mb-4">
				<span class="text-welding-orange">CONTÁCTENOS</span>
			</h2>
			<div class="w-24 h-1 bg-welding-orange mx-auto rounded-full"></div>
		</div>

		<div class="grid md:grid-cols-2 gap-8 lg:gap-12">
			<!-- Contact Info -->
			<div class="space-y-6 animate-on-scroll delay-1">
				<div class="bg-steel p-6 rounded-xl">
					<h3 class="font-heading text-xl font-semibold text-smoke mb-6">Información de Contacto</h3>

					<!-- Phone -->
					<a href={phoneLink} class="flex items-center gap-4 mb-6 group">
						<div class="w-12 h-12 bg-charcoal rounded-lg flex items-center justify-center group-hover:bg-welding-orange/10 transition-colors">
							<svg class="w-6 h-6 text-welding-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
							</svg>
						</div>
						<div>
							<p class="text-ash text-sm">Teléfono</p>
							<p class="text-smoke text-lg font-medium group-hover:text-welding-orange transition-colors">{phone}</p>
						</div>
					</a>

					<!-- Location -->
					<div class="flex items-center gap-4 mb-6">
						<div class="w-12 h-12 bg-charcoal rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-welding-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
							</svg>
						</div>
						<div>
							<p class="text-ash text-sm">Ubicación</p>
							<p class="text-smoke font-medium">Bonito Oriental, Colón</p>
							<p class="text-ash text-sm">Honduras</p>
						</div>
					</div>

					<!-- WhatsApp Button -->
					<a
						href={whatsappLink}
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center justify-center gap-3 w-full bg-[#25D366] hover:bg-[#128C7E] text-white font-heading font-bold py-4 px-6 rounded-lg transition-colors"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
						</svg>
						Escríbenos por WhatsApp
					</a>
				</div>

				<!-- Hours -->
				<div class="bg-steel p-6 rounded-xl">
					<h3 class="font-heading text-lg font-semibold text-smoke mb-3">Horario de Atención</h3>
					<p class="text-ash">Lunes a Sábado</p>
					<p class="text-smoke font-medium">7:00 AM - 5:00 PM</p>
				</div>
			</div>

			<!-- Map placeholder -->
			<div class="bg-steel rounded-xl overflow-hidden min-h-[400px] flex items-center justify-center animate-on-scroll delay-2">
				<div class="text-center p-8">
					<svg class="w-16 h-16 text-ash mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
					</svg>
					<p class="text-smoke font-heading font-semibold text-lg mb-2">Bonito Oriental, Colón</p>
					<p class="text-ash text-sm">Honduras, C.A.</p>
					<p class="text-ash text-xs mt-4">Mapa disponible próximamente</p>
				</div>
			</div>
		</div>
	</div>
</section>
