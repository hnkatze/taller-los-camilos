---
import '../styles/global.css';
import WhatsAppButton from '../components/WhatsAppButton.astro';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Taller Los Camilos - Soldadura Profesional en Bonito Oriental, Honduras",
	description = "Taller de soldadura en Bonito Oriental, Colón, Honduras. Especialistas en pailas ganaderas, reparación de maquinaria agrícola, soldadura de arco eléctrico, techados y básculas. Llámenos: 99505549"
